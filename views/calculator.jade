extends layout

block content
  h2 Калькулятор
  form.form-horizontal.calculation(method='post', action='calculator/calculate')
    fieldset
        legend Рассчёт строительства дома
        .form-group
            label.col-lg-2.control-label Ширина дома
            .col-lg-4
              input.form-control(name='sideA', placeholder='8', value=8)
        .form-group
            label.col-lg-2.control-label Длина дома
            .col-lg-4
              input.form-control(name='sideB', placeholder='12', value=12)
        .form-group
            label.col-lg-2.control-label Этажей в доме
            .col-lg-4
              select.form-control(name='floors')
                option(value='1') 1
                option(value='2' selected) 2
        .form-group
            label.col-lg-2.control-label Количество комнат
            .col-lg-4
              select.form-control(name='rooms')
                option(value='1') 1
                option(value='1') 2
                option(value='3' selected) 3
                option(value='4') 4
        .form-group
            label.col-lg-2.control-label Фундамент
            .col-lg-4
                label.radio-inline
                  input#inlineRadio1(type='radio', name='foundation', value='plita' checked)
                  | Плитный
                label.radio-inline
                  input#inlineRadio2(type='radio', name='foundation', value='lenta')
                  | Ленточный
                label.radio-inline
                  input#inlineRadio3(type='radio', name='foundation', value='stolb')
                  | Столбчатый
        .form-group
            label.col-lg-2.control-label Кровля
            .col-lg-4
                label.radio-inline
                  input#inlineRadio1(type='radio', name='roof', value='flat')
                  | Плоская
                label.radio-inline
                  input#inlineRadio2(type='radio', name='roof', value='2skat' checked)
                  | 2-скатная
                label.radio-inline
                  input#inlineRadio3(type='radio', name='roof', value='valma')
                  | Вальма
        .form-group
            .col-lg-4.col-lg-offset-2
                button.btn.btn-default(type='submit') Рассчитать
