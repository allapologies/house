  section.section.calculator
    section.hgroup
      .container
        h1 Калькулятор
        ul.breadcrumb.pull-right
          li
            a(href='/') Домой
          li.active Калькулятор
    section
      .container
        .row
          .calculator_preview.col-sm-4.col-md-4
            .team_member
              h4 Preview Area
              small Small Pic
              br
          .calculation.col-sm-8.col-md-8
            form.form-horizontal.calculation(method='post', action='calculator/calculate')
              fieldset
                .row
                  .col-sm-6.col-md-6
                    label Ширина дома
                    input.form-control(name='sideA', placeholder='8', value=8)
                  .col-sm-6.col-md-6
                    label Длина дома
                    input.form-control(name='sideB', placeholder='12', value=12)
                .row
                  .col-sm-6.col-md-6
                    label Этажей в доме
                    select.form-control(name='floors')
                      option(value='1') 1
                      option(value='2' selected) 2
                  .col-sm-6.col-md-6
                    label.control-label Количество комнат
                    select.form-control(name='rooms')
                      option(value='1') 1
                      option(value='1') 2
                      option(value='3' selected) 3
                      option(value='4') 4
                .row
                  .col-sm-12.col-md-12
                    label Фундамент
                      label.radio-inline
                        input#inlineRadio1(type='radio', name='foundation', value='plita' checked)
                        | Плитный
                      label.radio-inline
                        input#inlineRadio2(type='radio', name='foundation', value='lenta')
                        | Ленточный
                      label.radio-inline
                        input#inlineRadio3(type='radio', name='foundation', value='stolb')
                        | Винтовой
                .row
                  .col-sm-12.col-md-12
                    label Кровля
                      label.radio-inline
                        input#inlineRadio1(type='radio', name='roof', value='flat')
                        | Плоская
                      label.radio-inline
                        input#inlineRadio2(type='radio', name='roof', value='2skat' checked)
                        | 2-скатная
                      label.radio-inline
                        input#inlineRadio3(type='radio', name='roof', value='valma')
                        | Вальма
                      br
                      .col-lg-4.col-lg-offset-2
                        button#submit_btn.btn.btn-primary(type='submit') Отправить
  section.section.contact
    section.hgroup
      .container
        h1 Обратная связь
        h2 Пожелания и предложения
        ul.breadcrumb.pull-right
          li
            a(href='index.html') Домой
          li.active Контакты
    section
      .container
        .row
          .office_address.col-sm-4.col-md-4
            .team_member
              img(src='images/restart_logo.png', width='90', height='90', alt='logo')
              h5 {re}start, HTML
              small Web-Development Company
              br
              br
              .team_social
                a(href='https://www.facebook.com')
                  i.fa.fa-facebook
                a(href='https://twitter.com/leonartgr')
                  i.fa.fa-twitter
                a(href='#pinterest')
                  i.fa.fa-linkedin
                a(href='https://github.com/PlethoraThemes')
                  i.fa.fa-github-alt
              address
                strong
                br
                |                               795 Folsom Ave, Suite 600
                br
                |                               San Francisco, CA 94107
                br
                abbr(title='Phone') P:
                |  (123) 456-7890
              address
                abbr(title='Phone') E:
                a(href='mailto:#') first.last@example.com
          .contact_form.col-sm-8.col-md-8
            form#contact_form(method='post', action='contact/send')
              .row
                .col-sm-6.col-md-6
                  label Имя
                  input#name.form-control(name='name', type='text', value='')
                .col-sm-6.col-md-6
                  label E-mail
                  input#email.form-control(name='email', type='text', value='')
              .row
                .col-sm-12.col-md-12
                  label Тема
                  input#subject.form-control(name='subject', type='text')
              .row
                .col-sm-12.col-md-12
                  label Сообщение
                  textarea#message.form-control(name='msg', rows='8')
                .col-sm-12.col-md-12
                  br
                  button#submit_btn.btn.btn-primary(type='submit') Отправить
